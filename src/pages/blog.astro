  <script>
    const text = "En el mundo del c√≥digo, cada letra cuenta una historia... Esta es la nuestra.";
    const typewriterElement = document.getElementById('typewriter');
    const contentElement = document.getElementById('blog-content');
    const cards = document.querySelectorAll('.blog-card');
    let i = 0;

    function type() {
      if (typewriterElement && i < text.length) {
        typewriterElement.innerHTML += text.charAt(i);
        i++;
        setTimeout(type, 40); 
      } else {
        // Revelar contenedor principal
        contentElement?.classList.remove('opacity-0', 'translate-y-8');
        
        // Revelar tarjetas una por una (Staggered)
        cards.forEach((card, index) => {
          setTimeout(() => {
            card.classList.remove('opacity-0', 'translate-y-4');
          }, 300 * (index + 1));
        });
      }
    }

    window.onload = type;
  </script>
